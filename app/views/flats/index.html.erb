<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="cards">
    <% @flats.each do |flat| %>
      <div class="card">
        <div class="main">
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <div class="details">
            <div class="guests">
              <i class="fa-solid fa-user-group"></i>
              <%= flat.number_of_guests %>
            </div>
            <div class="price">
              <i class="fa-solid fa-euro-sign"></i>
              <%= flat.price_per_night %>
            </div>
          </div>
        </div>
        <div class="more flex">
          <%= link_to "More info", flat_path(flat) %>
          <%= link_to "Edit", edit_flat_path(flat), class: "orange" %>
          <%= link_to "Remove", flat_path(flat), method: :delete, class: "red" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
